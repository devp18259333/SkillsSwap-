  <script>
    function getMatch() {
      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const grade = document.getElementById("grade").value;
      const academics = document.getElementById("academics").value;
      const activities = document.getElementById("activities").value;
      const hobby = document.getElementById("hobby").value;
      const study = document.getElementById("study").value;
      const skill = document.getElementById("skill").value;
      const goal = document.getElementById("goal").value;
      const personality = document.getElementById("personality").value;
      const result = document.getElementById("matchResult");

      if (!name || !email || !grade || !academics || !hobby || !study || !skill || !goal || !personality) {
        result.innerText = "‚ùó Please complete all required fields to get your match.";
        return;
      }

      let matchText = `${name}, a ${grade} grade student studying ${academics}, who enjoys ${hobby}, and aims to ${goal}.\nEmail: ${email}\n`;

      switch (skill) {
        case "social":
          matchText += "üéØ You're a perfect match for businesses needing social media content.";
          break;
        case "design":
          matchText += "üé® You'd be great at helping local shops with branding and visuals.";
          break;
        case "finance":
          matchText += "üíº Your finance skills could benefit small businesses with budgeting.";
          break;
        case "event":
          matchText += "üìÖ You're ideal for helping organize events and fundraisers.";
          break;
        case "photo":
          matchText += "üì∑ You'd be great with content creation and photography.";
          break;
        case "web":
          matchText += "üíª You're the go-to person for web design and tech help.";
          break;
        case "service":
          matchText += "üó£Ô∏è Your communication skills are great for customer-facing roles.";
          break;
        case "editing":
          matchText += "üé¨ Video editing skills make you perfect for content creators.";
          break;
        case "writing":
          matchText += "üìù You're a strong candidate for business writing and media work.";
          break;
        case "research":
          matchText += "üîç You‚Äôd excel helping nonprofits or startups with analysis.";
          break;
        default:
          matchText = "‚ùó Please select a skill to find your match.";
      }

      if (activities) {
        matchText += `\nYou're currently involved in: ${activities}.`;
      }

      result.innerText = matchText;
    }
  </script>
